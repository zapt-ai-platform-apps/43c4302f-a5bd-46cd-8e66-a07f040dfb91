{
  "name": "joke-app",
  "version": "1.0.0",
  "description": "A Joke app with SolidJS, Tailwind, and Vite",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate && npm run migrate && vite build",
    "serve": "vite preview",
    "generate": "drizzle-kit generate:pg",
    "migrate": "node -e \"require('drizzle-orm/node-postgres').migrate(require('drizzle-orm/node-postgres').drizzle(new (require('pg').Pool)({connectionString: process.env.COCKROACH_DB_URL})), {migrationsFolder: './drizzle'}).then(() => console.log('Migration complete'))\""
  },
  "dependencies": {
    "solid-js": "^1.7.5",
    "drizzle-orm": "^0.30.0",
    "pg": "^8.11.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9",
    "vite-plugin-solid": "^2.7.0",
    "drizzle-kit": "^0.21.1"
  }
}